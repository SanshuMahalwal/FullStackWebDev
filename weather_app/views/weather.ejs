<%- include('./partials/header') %>

<%- include('./partials/navbar') %>

<div class="container-fluid weather_header">
    <div class="row">
        <div class="col-md-6 col-12 weather_header_left">
            <form class="weather-form">
                <div class="my-5">
                  <label for="city_name" class="form-label city-label">City :</label>
                  <input type="text" class="form-control city-inp" id="city_name" name="city_name" placeholder="Enter city name...">
                </div>
                
                <button type="submit" class="btn btn-primary check-btn">Check Weather</button>
            </form>
        </div>
        <div class="col-md-6 col-12 weather_header_right">
            <div class="container weather-info d-flex flex-column justify-content-between">
                <div class="top-layer d-flex justify-content-between align-items-center">
                    <p id="day"></p>
                    <p id="date"></p>
                </div>
                
                <div>
                    <h1 class="text-center city-out">Get output here</h1>
                </div>

                <div class="d-flex justify-content-around align-items-center weather-data data_hide">
                    <h1 class="city-temp"></h1>
                    <i class="city-mood"></i>
                    <h1 class="city-feels"></h1>
                </div>
            </div>

        </div>
    </div>
</div>

<footer> 
    <p>Created with ❤️ by Sunny</p>
</footer>

<script>
    function getDay() {
        const day = document.querySelector('#day');
        const weekdays = new Array(7);
        weekdays[0] = "Sunday"
        weekdays[1] = "Monday"
        weekdays[2] = "Tuesday"
        weekdays[3] = "Wednesday"
        weekdays[4] = "Thursday"
        weekdays[5] = "Friday"
        weekdays[6] = "Saturday"

        const date = new Date();
        const today = weekdays[date.getDay()];
        day.innerText = today;
        return;
    }
    
    function getDate() {
        const dateTag = document.querySelector('#date');
        const months = new Array(12);
        months[0] = 'Jan'
        months[1] = 'Feb'
        months[2] = 'Mar'
        months[3] = 'Apr'
        months[4] = 'May'
        months[5] = 'Jun'
        months[6] = 'Jul'
        months[7] = 'Aug'
        months[8] = 'Sep'
        months[9] = 'Oct'
        months[10] = 'Nov'
        months[11] = 'Dec'

        const today = new Date();
        const date = today.getDate();
        const month = months[today.getMonth()];
        dateTag.innerText = `${date}  ${month}`;
    }

    getDay();
    getDate();
    
</script>

<%- include('./partials/footer') %>
