<% layout('layouts/boilerplate') -%>

<h1 class="text-center mb-3">Login!</h1>
<%- include('../partials/flash') %>    
<div class="row">
    <div class="col-md-6 mx-auto d-flex flex-column align-items-center">
        <form action="/login" method="post" class="w-50">
            <div class="mb-3">
                <label class="form-label" for="username">Username: </label>
                <input class="form-control" type="text" name="username" id="username">
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password: </label>
                <input class="form-control" type="password" name="password" id="password">
            </div>
            <button class="btn btn-success mb-5" type="submit">Login</button>
            <p>New User? <a href="/register" class="btn btn-primary btn-sm">Sign up here</a></p>
        </form>
    </div>
</div>